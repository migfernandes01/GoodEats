<% layout('layouts/boilerplate.ejs') %>
    <div class="d-flex flex-row">
        <div class="col-md-9 me-3">
            <h1 class = "my-3">Best <%=category%> Food Restaurants:</h1>
            <%- include('partials/restaurants.ejs') %> 
        </div>
        <div class="col-md-3">
            <div class="card my-3 me-3 p-3">
                <div class="row">
                    <div class="card-body">
                        <h4>Popular <%=category%> Food:</h4>
                        <ul class="list-group list-group-flush">
                            <%if(category == "American"){%>
                                <%- include('popular_food/american.ejs') %> 
                            <%}else if(category == "Japanese"){%>
                                <%- include('popular_food/japanese.ejs') %> 
                            <%}else if(category == "Chinese"){%>
                                <%- include('popular_food/chinese.ejs') %> 
                            <%}else if(category == "Greek"){%>
                                <%- include('popular_food/greek.ejs') %> 
                            <%}else if(category == "Latin"){%>
                                <%- include('popular_food/latin.ejs') %> 
                            <%}else if(category == "Italian"){%>
                                <%- include('popular_food/italian.ejs') %> 
                            <%}else if(category == "Healthy"){%>
                                <%- include('popular_food/healthy.ejs') %> 
                            <%}else if(category == "Indian"){%>
                                <%- include('popular_food/indian.ejs') %> 
                            <%}else{%>
                                <%- include('popular_food/vegan.ejs') %> 
                            <%}%>
                        </ul>
                    </div>
                </div>
            </div>
            <form action="/restaurants/new">
                <button class="btn btn-lg btn-success mt-3">âž• Add a restaurant</button>
            </form>
        </div>
    </div>