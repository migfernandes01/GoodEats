<% layout('layouts/boilerplate.ejs') %> 
    <div class=".d-flex container justify-content-center align-items-center">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow mb-5">
                    <img src="https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" 
                    alt="" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">Register</h5>
                        <form action="/register" method="post" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">Username: </label>
                                <input class="form-control" type="text" id="username" name="username" autofocus required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="email">E-mail: </label>
                                <input class="form-control" type="email" id="email" name="email" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">Password: </label>
                                <input class="form-control" type="password" id="password" name="password" required>
                            </div>
                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-success">Register</button>
                            </div>
                            <div class="mb-3">
                                <p>Already have an account? <a href="/login">Login Here</a></p>
                            </div>
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    